                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 d-lg-flex d-none">
                    <div class="p-3 rounded-4 w-100 d-flex align-items-center justify-content-center bg-grd-info">
                        <img src="~/assets/images/auth/register1.png" class="img-fluid" alt="">
                    </div>
                </div>
            </div><!--end row-->
        </div>

    </div>

    <!--authentication-->
    <!--plugins-->
    <script src="~/assets/js/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bi-eye-slash-fill");
                    $('#show_hide_password i').removeClass("bi-eye-fill");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bi-eye-slash-fill");
                    $('#show_hide_password i').addClass("bi-eye-fill");
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#registerForm').on('submit', function (event) {
                var isTermsChecked = $('#flexSwitchCheckChecked').is(':checked');
                if (!isTermsChecked) {
                    $('#termsError').show(); 
                    event.preventDefault();
                } else {
                    $('#termsError').hide(); 
                }
            });

            $('#inputPassword, #inputConfirmPassword').on('keyup', function () {
                var password = $('#inputPassword').val();
                var confirmPassword = $('#inputConfirmPassword').val();

                if (password === "" || confirmPassword === "") {
                    $('#passwordMatchError').text("Mật khẩu không được để trống.").show();
                } else if (password !== confirmPassword) {
                    $('#passwordMatchError').text("Mật khẩu không khớp.").show();
                } else {
                    $('#passwordMatchError').hide();
                }
            });
        });
    </script>
    @await Html.PartialAsync("_ToastrScripts")
</body>
</html>
