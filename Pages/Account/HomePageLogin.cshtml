<script>
	document.addEventListener("DOMContentLoaded", () => {
		const badge = document.getElementById("cart-quantity-badge");

		// Lấy số lượng giỏ hàng từ localStorage
		let qty = parseInt(localStorage.getItem("cartQuantity")) || 0;
		badge.textContent = qty;

		// Tìm tất cả các nút "Thêm vào giỏ hàng"
		const addButtons = document.querySelectorAll('.add-to-cart-main');
		addButtons.forEach(button => {
			button.addEventListener('click', function() {
				// Tăng số lượng giỏ hàng
				qty++;
				// Cập nhật số lượng trong giỏ hàng
				badge.textContent = qty;
				// Lưu lại số lượng vào localStorage
				localStorage.setItem("cartQuantity", qty);

				// Thêm hiệu ứng khi cập nhật giỏ hàng
				badge.classList.add('animate__animated', 'animate__tada');
				setTimeout(() => badge.classList.remove('animate__animated', 'animate__tada'), 600);
			});
		});
	});

</script>